{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "docker:enableMajor",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergeMinor"
  ],
  "timezone": "UTC",
  "schedule": [
    "before 6am on Sunday"
  ],
  "labels": [
    "dependencies"
  ],
  "commitMessagePrefix": "chore(deps):",
  "prHourlyLimit": 10,
  "prConcurrentLimit": 20,
  "rangeStrategy": "bump",
  "bumpVersion": "patch",
  "packageRules": [
    {
      "description": "Auto-merge Python patch updates",
      "matchDatasources": [
        "pypi"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "description": "Auto-merge Docker digest updates",
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "digest"
      ],
      "automerge": true
    },
    {
      "description": "Group Python dependencies",
      "matchDatasources": [
        "pypi"
      ],
      "groupName": "Python dependencies",
      "schedule": [
        "before 6am on Sunday"
      ]
    },
    {
      "description": "Group Docker base image updates",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "python"
      ],
      "groupName": "Docker base images",
      "schedule": [
        "before 6am on Sunday"
      ]
    },
    {
      "description": "Python version updates across project",
      "matchDatasources": ["docker", "github-actions"],
      "matchPackageNames": ["python", "actions/setup-python"],
      "groupName": "Python version updates",
      "schedule": ["before 6am on Sunday"],
      "automerge": false,
      "reviewersFromCodeOwners": true
    }
  ],
  "regexManagers": [
    {
      "description": "Update Python versions in GitHub Actions workflows",
      "fileMatch": ["^\\.github/workflows/.+\\.ya?ml$"],
      "matchStrings": [
        "python-version:\\s*(?<quote>[\"']?)(?<currentValue>\\d+\\.\\d+(?:\\.\\d+)?)\\k<quote>",
        "python-version:\\s*\\[(?<quote>[\"']?)(?<currentValue>\\d+\\.\\d+(?:\\.\\d+)?)\\k<quote>(?:,\\s*[\"']?\\d+\\.\\d+(?:\\.\\d+)?[\"']?)*\\]"
      ],
      "depNameTemplate": "python",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    },
    {
      "description": "Update Python versions in pyproject.toml Black configuration",
      "fileMatch": ["^pyproject\\.toml$"],
      "matchStrings": [
        "target-version\\s*=\\s*\\[(?:[\"']py(?<currentValue>\\d{2,3})[\"'](?:,\\s*)?)+\\]"
      ],
      "depNameTemplate": "python",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker",
      "extractVersionTemplate": "^py(?<version>\\d)(?<minor>\\d{1,2})$"
    },
    {
      "description": "Update Python versions in DevContainer images",
      "fileMatch": ["^\\.devcontainer/devcontainer\\.json$"],
      "matchStrings": [
        "\"image\":\\s*\"[^:]+:(?<currentValue>\\d+-\\d+\\.\\d+(?:\\.\\d+)?)[^\"]*\""
      ],
      "depNameTemplate": "mcr.microsoft.com/devcontainers/python",
      "datasourceTemplate": "docker",
      "versioningTemplate": "docker"
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "schedule": [
      "at any time"
    ]
  }
}
